<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mustore.dao.MainDao">
	
	<select id="selectHitProduct" resultType="kr.co.mustore.vo.ProductsVo">
		SELECT *, Floor(price*(1-discount/100)) AS salePrice 
		FROM `mu_products` 
		ORDER BY `hit` DESC 
		LIMIT 8; <!-- 조회수가 큰 순서대로 8개가 메인페이지 히트상품에 상품출력 -->
	</select>
	
	<select id="selectBestProduct" resultType="kr.co.mustore.vo.ProductsVo">
		SELECT *, Floor(price*(1-discount/100)) AS salePrice 
		FROM `mu_products` 
		ORDER BY `sold` DESC 
		LIMIT 5; <!-- sold가 큰 순서대로 5개가 메인페이지(카테고리) 베스트상품에 상품출력 -->
	</select>
	
